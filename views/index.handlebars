<div class="jumbotron jumbotron-fluid" style="text-align: center">
  <div class="container">
    <h1 class="display-4">SceneIT</h1>
    <p class="lead">Track watched movies and what to watch.</p>
  </div>
</div>

<div class="row">
  <div class="col-md-2"></div>

  <div class="col-md-4 text-center">
    <div class="form-check form-check-inline">
      <input id="searchRadio1" type="radio"  class="form-check-input" name="search" value="1" checked> 
      <label class="form-check-input" for="searchRadio1">Top Movies</label> 
    </div>
    <div class="form-check form-check-inline">
      <input id="searchRadio2" type="radio" class="form-check-input" name="search" value="0" > 
      <label id="form-check-input" for="searchRadio2">Seen</label> 
    </div>

    {{#each burger}}
      {{#unless this.devoured}}
        <form class="form-inline" action="/{{this.id}}" method="POST">
          <label id="ready-items">{{this.burger_name}}</label>
          <input type="hidden" name="devoured" value={{this.devoured}}>&nbsp
          <button type="submit" class="btn btn-sm btn-danger" id="eat-btn">
          <i class="fas fa-hamburger"></i> Devour!</button>
        </form>
      {{/unless}}
    {{/each}}
  </div>
    
  <div class="col-md-4 text-center">
    <h2 id="ready-to-eat">Burger Heaven</h2>
    {{#each burger}}
      {{#if this.devoured}}
        <form class="form-inline" action="/{{this.id}}?_method=PUT" method="POST">
          <label id="ready-items">{{this.burger_name}}</label>
          <input type="hidden" name="devoured" value={{this.devoured}}>
        </form>
      {{/if}}
    {{/each}}
  </div>
</div>

  <div class="col-md-2"></div>

<div class="row">
  <div class="col-md-3"></div>
  <div class="col-md-6 text-center" id="add-form">
    <form action="/add" method="POST">
  <div class="form-group">
    <label for="new-burger" class="control-label">Create A New Burger</label>
    <input class="form-control" type="text" id="new-burger" name="name" value="" placeholder="Add New Burger Name">
    <button type="submit" class="btn btn-success btn-block" id="add-btn">Add Burger</button>
  </div>
  </form>
    {{#if alert}}
    <p style="color: red">{{alert}}</p>
    {{/if}}
    <div>
        <h3 id="total">Total Burgers Devoured: {{total}}</h3>
    </div>
  </div>
  <div class="col-md-3"></div>
</div>

<div id="home">
  <div class="container">
    <div class="row">
      <div class="col-8 offset-2">
        <h1>{{msg}}</h1>
        <h2>This is our Home Page!</h2>
        <form class="clearfix mb-4" action="POST">
          <div class="form-group">
            <label for="example-text">Example Text</label>
            <input type="text" id="example-text" class="form-control" aria-describedby="example-text" placeholder="Enter Example Text">
          </div>
          <div class="form-group">
            <label for="example-description">Example Description</label>
            <textarea class="form-control" id="example-description" aria-describedby="example-description" placeholder="Enter Example Description"></textarea>
          </div>
          <button id="submit" class="btn btn-primary float-right">Submit</button>
        </form>
        <h3>Examples:</h3>
        <ul id="example-list" class="list-group">
          {{#each examples}}
          <li data-id="{{this.id}}" class="list-group-item">
            <a href="example/{{this.id}}">{{this.text}}</a>
            <button class="btn btn-danger float-right delete">ï½˜</button>
          </li>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
</div>

